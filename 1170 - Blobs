#include <stdio.h>
#include <math.h>

int main() {
    int n;
    scanf("%d", &n);
    
    while (n--) {
        double comida;
        scanf("%lf", &comida);
        
        int dias = 0;
        while (comida > 1.0) {
            comida /= 2;
            dias++;
        }
        
        printf("%d dias\n", dias);
    }
    
    return 0;
}
