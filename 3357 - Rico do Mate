#include <stdio.h>
#include <string.h>

int main() {
    int N;
    float L;
    float Q;
    char participantes[10][13];

    scanf("%d %f %f", &N, &L, &Q);

    for (int i = 0; i < N; i++) {
        scanf("%s", participantes[i]);
    }
    
    int cuias_completas = (int)(L / Q);
    float agua_restante = L - cuias_completas * Q;
    
    int indice_ultimo_participante = (cuias_completas % N) - 1;
    if (indice_ultimo_participante < 0) {
        indice_ultimo_participante = N - 1;
    }

    printf("%s %.1f\n", participantes[indice_ultimo_participante], agua_restante);

    return 0;
}
